example {α : Type*} [Preorder α] {f  : α → ℝ}
{c : ℝ} (mf : Monotone f) (nnc : 0 ≤ c) : Monotone fun x ↦ c * f x := by
intro a b aleb
apply mul_le_mul_of_nonneg_left
apply mf aleb
exact nnc

example {α : Type*} [Preorder α] {f : α → ℝ} {g : α → α}
  (mf : Monotone f) (mg : Monotone g) : Monotone (fun x ↦ f (g x)) := by
intro a b aleb
apply mf
apply mg
exact aleb

def FnEven (f : ℝ → ℝ) : Prop :=
  ∀ x, f x = f (-x)

def FnOdd (f : ℝ → ℝ) : Prop :=
  ∀ x, f x = -f (-x)

