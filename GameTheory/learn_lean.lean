example (h : ∀ a, ∃ x, f x > a) : ¬FnHasUb f := by
  intro fnub
  rcases fnub with ⟨a, fnuba⟩
  rcases h a with ⟨x, hx⟩
  have : f x ≤ a := fnuba x
  linarith

example (h : ∀ a, ∃ x, f x < a) : ¬FnHasLb f := by
   intro fnlb
   rcases fnlb with ⟨a, fnlba⟩ 
   rcases h a with ⟨x, hx⟩
   have : f x  ≥ a := fnlba x
   linarith


